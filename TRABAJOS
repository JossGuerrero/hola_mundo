        "    notaExamen = int(input(\"Ingresa tu nota del examen (valores permitidos del 1 al 10): \"))\n",
        "\n",
        "\n",
        "    if 0 <= notaExamen <= 10:\n",
        "        print(\"Es una nota válida.\")\n",
        "\n",
        "\n",
        "        inasistencias = int(input(\"¿Cuántas veces has faltado a clases?: \"))\n",
        "\n",
        "\n",
        "        if inasistencias < 3 and notaExamen >= 8:\n",
        "            print(\"APROBADO\")\n",
        "        else:\n",
        "            print(\"REPROBADO\")\n",
        "    else:\n",
